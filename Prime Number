while True:

 num = int(input("Enter a number: "))

 if num > 1:
  for i in range(2, num//2):
    if (num % i) == 0:
     print(num,"is not a prime number")
     break
  else:
    print(num, "is a prime number")
 else:
    print(num,"is not a prime number")

 choice = input("Press 'q' to quit or any other key to continue: ")

 if choice == "q":
  break
